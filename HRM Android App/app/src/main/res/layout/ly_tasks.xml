<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_large"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:visibility="visible"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/colorApp"
        app:strokeWidth="100dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ly_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_high"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_baseline_priority_high_24"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:text="@string/high"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:clickable="true"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_normal"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_baseline_filter_center_focus_24"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:text="@string/normal"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_low"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_baseline_filter_center_focus_24"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:text="@string/low"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_pend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_pendtask"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_pending"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:text="@string/pending"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center">



                    <TextView
                        android:id="@+id/approved"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_done_black_24dp"
                        android:drawablePadding="5dp"
                        android:text="@string/completed"
                        android:padding="10dp"
                        android:clickable="false"
                        android:background="@drawable/button_complet"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_10" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_middle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_large"
                android:padding="@dimen/spacing_medium"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Etherium"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_80"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/txt_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Fever adFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeaveadFeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!FeverLeave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!Fever Leave!"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/grey_40"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>



            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_middle" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:gravity="center_vertical"
                    android:text="Due Date:"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:gravity="center_vertical"
                    android:text="12/09/2022"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_60" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />



                    <TextView
                        android:id="@+id/txt_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_nothanks_bg"
                        android:clickable="false"
                        android:padding="10dp"
                        android:text="@string/viewdetails"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorApp"
                        android:textSize="13sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:gravity="center_vertical"
                    android:text="12"
                    android:visibility="gone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_60" />

            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>