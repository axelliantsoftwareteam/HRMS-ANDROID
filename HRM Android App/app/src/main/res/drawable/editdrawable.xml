    <item>
        <shape android:shape="rectangle">
            <!-- gradient for the stroke is set below -->
            <gradient
                android:angle="180"
                android:startColor="@color/grey_50"
                android:endColor="@color/grey_50"
                android:type="linear" />
            <corners android:radius="30dp"></corners>
        </shape>

    </item>
    <!-- stroke width has to be adjusted by setting left, right , top and bottom -->
    <item android:left="40dp" android:right="40dp"
        android:top="40dp" android:bottom="40dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorApp"/>
        </shape>
    </item>

</selector>